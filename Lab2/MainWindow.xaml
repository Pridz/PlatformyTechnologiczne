<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="650">
    <Window.Resources>
        <ContextMenu x:Key="cmDirTreeView">
            <MenuItem Header="Create" Click="cmDirCreate_Click"/>
            <MenuItem Header="Delete" Click="cmDirDelete_Click"/>
        </ContextMenu>
        <ContextMenu x:Key="cmFileTreeView">
            <MenuItem Header="Open" Click="cmFileOpen_Click"/>
            <MenuItem Header="Delete" Click="cmFileDelete_Click"/>
        </ContextMenu>
    </Window.Resources>
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="open_Click"/>
                <MenuItem Header="_Exit" Click="exit_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20">
            <StatusBarItem>
                <TextBlock Name="attributesOfSelectedFile" />
            </StatusBarItem>
        </StatusBar>
        <TreeView Name="treeView" DockPanel.Dock="Left" Width="250" Margin="3" SelectedItemChanged="treeView_Click">            
        </TreeView>
        <ScrollViewer>
            <TextBlock DockPanel.Dock="Right" Name="openedFileTextBlock" Width="350"/>            
        </ScrollViewer>
        
    </DockPanel>
    
</Window>
