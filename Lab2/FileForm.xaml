<Window x:Class="Lab2.FileForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileForm" Height="300" Width="300">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="_Name" Target="{Binding ElementName=txtName}" Height="50"/>
        <TextBox Name="txtName" DockPanel.Dock="Top" Height="50"/>
        <Button Content="_Create" DockPanel.Dock="Bottom" Click="create_Click"/>
        <Button Content="_Cancel" DockPanel.Dock="Bottom" Click="cancel_Click"/>
    </DockPanel>
</Window>
