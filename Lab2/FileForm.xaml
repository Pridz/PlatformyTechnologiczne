<Window x:Class="Lab2.FileForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileForm" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <WrapPanel Height="50">
            <Label Content="_Name:" Target="{Binding ElementName=txtName}" Height="35"/>
            <TextBox Name="txtName" Width="200" Height="35"/>
        </WrapPanel>        
        <WrapPanel Height="50" HorizontalAlignment="Center">            
            <RadioButton Name="fileRadioButton">File</RadioButton>
            <RadioButton Name="directoryRadioButton">Directory</RadioButton>
        </WrapPanel>
        <StackPanel HorizontalAlignment="Center" Height="75">
            <CheckBox Width="75" Name="readOnlyCheckBox">ReadOnly</CheckBox>
            <CheckBox Width="75" Name="archiveCheckBox">Archive</CheckBox>
            <CheckBox Width="75" Name="hiddenCheckBox">Hidden</CheckBox>
            <CheckBox Width="75" Name="systemCheckBox">System</CheckBox>
        </StackPanel>
        <Grid Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="_Create" Width="60" Click="create_Click"/>
            <Button Grid.Column="1" Content="_Cancel" Click="cancel_Click" Width="60"/>
        </Grid>
    </StackPanel>
</Window>
